.slideshow__subtitle {
  color: $color-overlay-title-text;

  @include media-query($small) {
    display: none;
  }
}

.slideshow__title--mobile {
  margin-bottom: 0;

  & ~ .slideshow__subtitle--mobile {
    margin-top: 0.5rem;
  }
}

.slideshow__subtitle--mobile,
.slideshow__title--mobile {
  display: none;
  color: $color-text;

  @include media-query($small) {
    display: block;
  }
}

